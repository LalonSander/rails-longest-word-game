<div class="main d-flex flex-column justify-content-center align-items-center">
  <div class="card text-center p-3 rounded-3 shadow col-4">
    <div class="fs-4 mb-2 text-dark">Here's your score:</div>
    <div class="fs-1 fw-bold text-primary"><%= @grand_score %></div>
    <div class="fs-5 mb-3 text-secondary"><%= @word.upcase %>, Word Score: <%= @score %> </div>

    <div class="mb-3 text-center">
      <span class="fs-5 mb-3 text-secondary bg-<%= @bg %>-subtle rounded-3 p-3"><%= @message %></span>
    </div>
    <%= link_to "Play Again", new_path, class: "btn btn-primary" %>
  </div>
</div>
<p><%= @params %><p>
